import 'package:flutter/material.dart';
import '../core/app_theme.dart';

// Telinha "Industrial" pra deixar claro que está em desenvolvimento,
// mas deixar o usuário testar o que já existe.
class IndustrialDevScreen extends StatelessWidget {
  const IndustrialDevScreen({super.key});

  Widget _card({required Widget child}) {
    return Container(
      padding: const EdgeInsets.all(16),
      decoration: BoxDecoration(
        color: AppTheme.card,
        borderRadius: BorderRadius.circular(18),
        border: Border.all(color: AppTheme.border.withOpacity(.35)),
      ),
      child: child,
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: AppTheme.bg,
      appBar: AppBar(
        backgroundColor: AppTheme.bg,
        title: const Text('Modo Industrial'),
      ),
      body: ListView(
        padding: const EdgeInsets.all(16),
        children: [
          // AVISO GRANDE (flags)
          _card(
            child: Row(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Container(
                  width: 44,
                  height: 44,
                  decoration: BoxDecoration(
                    color: Colors.orange.withOpacity(.15),
                    borderRadius: BorderRadius.circular(14),
                    border: Border.all(color: Colors.orange.withOpacity(.35)),
                  ),
                  child: const Icon(Icons.construction, color: Colors.orange),
                ),
                const SizedBox(width: 12),
                Expanded(
                  child: Column(
                    crossAxisAlignment: CrossAxisAlignment.start,
                    children: [
                      const Text(
                        '⚠️ EM DESENVOLVIMENTO',
                        style: TextStyle(
                            color: Colors.white,
                            fontWeight: FontWeight.w900,
                            fontSize: 18),
                      ),
                      const SizedBox(height: 6),
                      Text(
                        'Você pode testar normalmente o que já está pronto, mas este modo ainda está em construção.\n'
                        'Pode mudar layout, nomes e algumas funções podem falhar.',
                        style: TextStyle(
                            color: Colors.white.withOpacity(.75),
                            fontWeight: FontWeight.w700),
                      ),
                      const SizedBox(height: 10),
                      Text(
                        'O que está entrando (em breve):\n'
                        '• Mapa da fábrica (Área → Linha → Máquina)\n'
                        '• QR da máquina (abre checklist + histórico direto)\n'
                        '• Fechamento de turno (ranking + timeline)\n'
                        '• Exportação padrão supervisor (CSV/PDF no futuro)\n',
                        style: TextStyle(
                            color: Colors.white.withOpacity(.70),
                            fontWeight: FontWeight.w700),
                      ),
                    ],
                  ),
                ),
              ],
            ),
          ),

          const SizedBox(height: 12),

          _card(
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                const Text('Teste agora',
                    style: TextStyle(
                        color: Colors.white, fontWeight: FontWeight.w900)),
                const SizedBox(height: 8),
                Text(
                  'Se você quiser, eu “subo o nível” desse modo depois (visual de HMI + mapa da fábrica + QR). '
                  'Por enquanto, a ideia é só deixar claro pro usuário que está em obra.',
                  style: TextStyle(
                      color: Colors.white.withOpacity(.7),
                      fontWeight: FontWeight.w700),
                ),
                const SizedBox(height: 12),

                // Botão para entrar no Industrial atual (o que já existe)
                SizedBox(
                  width: double.infinity,
                  height: 48,
                  child: ElevatedButton.icon(
                    icon: const Icon(Icons.factory_outlined),
                    label: const Text('Entrar e testar o Industrial (beta)'),
                    onPressed: () {
                      // volta e manda trocar modo via seletor:
                      Navigator.of(context).pop();
                      // se você quiser, posso trocar isso pra ir direto no IndustrialHomeScreen
                      // mas prefiro manter o fluxo atual do seu app.
                    },
                  ),
                ),
              ],
            ),
          ),
        ],
      ),
    );
  }
}
